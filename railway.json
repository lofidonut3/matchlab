{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd packages/shared && pnpm build && cd ../backend && pnpm build"
    },
    "deploy": {
        "startCommand": "cd packages/backend && pnpm start:prod",
        "healthcheckPath": "/api/health",
        "restartPolicyType": "ON_FAILURE"
    }
}